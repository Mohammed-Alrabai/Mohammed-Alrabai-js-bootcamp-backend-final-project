<section
  class="text-gray-600 body-font w-1\/2 mx-auto flex items-center justify-center"
  style="margin-left: 270px; margin-right: 30px">
  <div class="container px-5 py-8 mx-auto">
    <div class="flex flex-wrap w-full mb-20 relative">
      <div class="lg:w-1/2 w-full mb-6 lg:mb-0">
        <h1
          class="sm:text-3xl text-2xl font-medium title-font mb-2 text-gray-900">
          My Courses
        </h1>
        <span
          class="text-gray-900 text-base absolute radius-lg right-0 px-4 py-2 text-center whitespace-nowrap bg-indigo-500 text-white rounded-full"
          style="bottom: -50px; right: 50px"
          ><%= instructor.courses.length %></span
        >
        <div class="h-1 bg-indigo-500 rounded" style="width: 75vw"></div>
      </div>
    </div>
    <div class="flex flex-wrap -m-4">
      <% for( Course of instructor.courses ) { %>
      <div class="xl:w-1/3 md:w-1/2 p-4">
        <div class="bg-gray-100 p-6 rounded-lg">
          <h3
            class="tracking-widest text-indigo-500 text-lg font-medium title-font">
            <span class="text-gray-900 text-base">Course Title:</span> <br />
            <%= Course.title %>
          </h3>
          <h2 class="text-md text-indigo-500 font-medium title-font mb-4">
            <span class="text-gray-900 text-base">Instructor: </span> <br />
            <%= instructor.name %>
          </h2>
          <span class="leading-relaxed text-base mb-1 font-medium title-font">
            Description :</span
          >
          <p class="leading-relaxed text-base"><%= Course.description %></p>
          <br />
          <span class="leading-relaxed text-base mb-1 font-medium title-font">
            date :</span
          >
          <p class="leading-relaxed text-base"><%= Course.date %></p>
          <div
            class="flex mt-6 justify-between flex-wrap text-base leading-relaxed">
            <div
              class="flex items-center mb-2 text-indigo-500 leading-relaxed cursor-pointer hover:text-indigo-600">
              <a
                href="/instructor/myCourses/<%= Course.id %>"
                class="text-indigo-500 inline-flex mt-6 items-center justify-center h-10 px-4 font-medium text-center text-white bg-indigo-500 rounded-lg transition duration-75 ease-in-out cursor-pointer hover:bg-indigo-600 focus:ring-4 focus:outline-none focus:ring-indigo-300"
                >Show
              </a>
            </div>
            <div
              class="flex items-center mb-2 text-indigo-500 gap-x-2 leading-relaxed cursor-pointer hover:text-indigo-600">
              <a
                href="/instructor/updateCourse/<%= Course.id %>"
                class="text-amber-500 inline-flex mt-6 items-center justify-center h-10 px-4 font-medium text-center text-white bg-amber-600 rounded-lg transition duration-75 ease-in-out cursor-pointer hover:bg-amber-700 focus:ring-4 focus:outline-none focus:ring-amber-300">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="w-6 h-6">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
                </svg>
              </a>
              <a
                href="/instructor/deleteCourse/<%= Course.id %>"
                class="text-rose-500 inline-flex mt-6 items-center justify-center h-10 px-4 font-medium text-center text-white bg-rose-600 rounded-lg transition duration-75 ease-in-out cursor-pointer hover:bg-rose-700 focus:ring-4 focus:outline-none focus:ring-rose-300">
                <svg
                  class="w-5 h-5"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="w-6 h-6">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>

      <% } %>
    </div>
  </div>
</section>
